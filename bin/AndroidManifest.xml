<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.erikgustafsson.photochat"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/photochat_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="se.erikgustafsson.photochat.AppState" >
        <activity
            android:name="se.erikgustafsson.photochat.ActivityLogin"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ActivityContacts" android:label="Contacts"></activity>
        <activity android:name="ActivityChat" android:icon="@drawable/ic_action_person"></activity>
        <activity android:name="ActivityRegister"></activity>
        <activity android:name="ActivityAddContact"></activity>
    </application>

</manifest>
